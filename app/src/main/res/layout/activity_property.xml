<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <Button
        android:id="@+id/btnValueAnimator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:text="查看ValueAnimator数值变化" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="你好，明天" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="改变文字透明度" />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="文字进行旋转" />

    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="文字移动" />

    <Button
        android:id="@+id/button7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="文字缩放" />

    <Button
        android:id="@+id/button8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="组合动画" />

    <Button
        android:id="@+id/button9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="读取XML组合动画" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ValueAnimator的高级用法" />

    <com.android.testing.widget.MyAnimView
        android:id="@+id/myAnimView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#eee" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ObjectAnimator的高级用法" />

    <Button
        android:id="@+id/viewProperty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ViewPropertyAnimator使用" />
</LinearLayout>